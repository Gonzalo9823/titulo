{
  "name": "titulo",
  "version": "1.0.0",
  "main": "index.js",
  "author": "<gonzalocaballero@me.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc && rm -v -rf src",
    "lint": "tsc --noEmit && eslint \"{src,tests}/**/*.ts\"",
    "mikro": "TS_NODE_BASEURL=./build/src NODE_ENV=production ORM=mikro-orm MIKRO_ORM_CLI=build/src/infrastructures/mikro-orm/mikro-orm.config.js node_modules/.bin/mikro-orm",
    "mikro:dev": "NODE_ENV=development ORM=mikro-orm MIKRO_ORM_CLI=src/infrastructures/mikro-orm/mikro-orm.config.ts node_modules/.bin/mikro-orm",
    "start:dev:mikro": "NODE_ENV=development ORM=mikro-orm ts-node-dev -r tsconfig-paths/register --poll --respawn src/index.ts",
    "start:dev:pg": "NODE_ENV=development ORM=pg ts-node-dev -r tsconfig-paths/register --poll --respawn src/index.ts",
    "start:dev:typeorm": "NODE_ENV=development ORM=type-orm ts-node-dev -r tsconfig-paths/register --poll --respawn src/index.ts",
    "typeorm": "TS_NODE_BASEURL=./build/src NODE_ENV=production ORM=type-orm node -r tsconfig-paths/register -r ts-node/register ./node_modules/typeorm/cli.js -d build/src/infrastructures/type-orm/index.js",
    "typeorm:dev": "NODE_ENV=development ORM=type-orm node -r tsconfig-paths/register -r ts-node/register ./node_modules/typeorm/cli.js -d src/infrastructures/type-orm/index.ts"
  },
  "devDependencies": {
    "@shopify/eslint-plugin": "^43.0.0",
    "@types/http-errors": "^2.0.4",
    "@types/node": "^20.9.0",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.0.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.1",
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^11.1.1",
    "@mgcrea/fastify-request-logger": "^1.4.0",
    "@mgcrea/pino-pretty-compact": "^1.3.0",
    "@mikro-orm/cli": "^5.9.3",
    "@mikro-orm/core": "^5.9.3",
    "@mikro-orm/migrations": "^5.9.3",
    "@mikro-orm/postgresql": "^5.9.3",
    "@t3-oss/env-core": "^0.7.1",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "fastify-type-provider-zod": "^1.1.9",
    "http-errors": "^2.0.0",
    "inversify": "^6.0.2",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  }
}
